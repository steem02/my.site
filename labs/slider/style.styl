#container
	width 7300px
	min-height 300px
	background lightgrey
	font-size 25px
	position relative
	left 0
	transition left 3s ease-out

#slider
	margin 100px auto
	width 790px
	height 300px
	border-radius 50%
	background yellow
	overflow hidden

.my-image
	width auto
	height 300px
	vertical-align top


// выделение слайдов
body::selection, .my-image::selection,
.container::selection, #slide::selection
	background transparent
	color transparent